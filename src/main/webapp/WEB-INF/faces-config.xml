<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<render-kit>
		<!-- Override LineChartRenderer with DiagramLineChartRenderer -->
		<renderer>
			<component-family>org.primefaces.component</component-family>
			<renderer-type>org.primefaces.component.chart.LineChartRenderer</renderer-type>
			<renderer-class>pl.kurylek.linechart.renderer.DiagramLineChartRenderer</renderer-class>
		</renderer>
	</render-kit>
</faces-config>